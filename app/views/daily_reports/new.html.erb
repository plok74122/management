<%= form_for @daily_report do |f| %>
  <% if @daily_report.errors.any? %>
    <ul>
      <% @daily_report.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <h2>新增日報：</h2>
  <div class="form-group" >
    <%= f.label :daily, "日期" %>
    <%= f.date_select :daily, class: "form-control" %>
  </div>

  <div class="form-group" >
    <%= f.label :content, "日報內容" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "提交", class:"btn btn-primary" %>
    <%= link_to "清除", new_leafe_path, class:"btn btn-danger" %>
  </div>
<% end %>